<!DOCTYPE html>
<html lang="en">
<head>
  <title>Scoreboard</title>
   <style> 
table, td, th { 
 border: 1px solid #ddd; 
 text-align: left; 
} 
table { 
 border-collapse: collapse; 
 width: 50%; 
} 
.table-data{ 
 position: relative; 
 left:150px; 
 top:100px; 
} 
th, td { 
 padding: 15px; 
} 
</style>
</head>
<body>
    <div class="table-data">
<h2>Scoreboard</h2>
    <table border="1">
        <tr>
            <th>Index</th>
            <th>User</th>
            <th>Score</th>

            <th>Edit</th>
            <th>Delete</th>
        </tr>
        
        <%
        if(userData.length!=0){
        var i=1;
        userData.forEach(function(data){
        %>
		
        <tr>
            <td>i</td>
            <td>data.username</td>
            <td>data.score</td>

            <td><a href="/users/edit/<%=data.id%>">Edit</a></td>
            <td><a href="/users/delete/<%=data.id%>">Delete</a></td>
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
    </div>
</body>
</html>